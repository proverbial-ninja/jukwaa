---
import Particles from "astro-particles";
import particle_options from "../particles.json";
import type { ISourceOptions } from "tsparticles-engine";
import { ViewTransitions } from "astro:transitions";
const configs: ISourceOptions = {
  particles: {
    number: {
      value: 100,
    },
    color: {
      value: "#ffffff",
    },
    links: {
      enable: true,
      distance: 200,
    },
    shape: {
      type: "circle",
    },
    opacity: {
      value: 1,
    },
    size: {
      value: {
        min: 4,
        max: 6,
      },
    },
    move: {
      enable: true,
    },
  },
  styles: [
    {
      selector: "canvas",
      style: {
        innerHeight: "1px",
      },
    },
  ],
  background: {
    color: "#000000",
  },
  fullScreen: {
    zIndex: -1,
    enable: true,
  },
};

const options: ISourceOptions = {
  background: {
    color: "#000",
  },
  fullScreen: {
    zIndex: -1,
  },
  particles: {
    number: {
      value: 100,
    },
    move: {
      enable: true,
    },
  },
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/jukwaa/fav.png" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Jukwaa</title>
    <ViewTransitions />
    <script>
      import {
        type Container,
        type Engine,
        tsParticles,
      } from "tsparticles-engine";
      import { loadFull } from "tsparticles";
      import { loadSlim } from "tsparticles-slim";

      // the function name is the parameter passed to the init attribute
      // required
      // add the function to window is mandatory, it will be searched there
      window.particlesInit = async function (engine: Engine) {
        await loadSlim(engine);
      };

      // the function name is the parameter passed to the loaded attribute
      // optional
      // add the function to window is mandatory, it will be searched there
      window.particlesLoaded = function (container: Container) {
        console.log("particlesLoaded callback");
      };
    </script></head
  >

  <body class="container-fluid overflow-y-hidden bg-black text-white">
    <slot />
    <!-- <Particles id="tsparticles" options={configs} init="particlesInit" /> -->
    <script is:inline async src="https://www.tiktok.com/embed.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Oxanium:wght@200..800&display=swap");
      canvas {
        height: 0px;
      }
      body {
        font-family: "Oxanium", sans-serif;
      }
      .sbody {
        column-count: 2;
        padding-top: 35px;
        text-align: justify;
      }
      /* Unscoped, delivered as-is to the browser.
     Applies to all <h1> tags on your site. */
      canvas {
        color: red;
      }
      .jukwaa-yellow-bg {
        background-color: #fff;
      }
      .glowing-text {
        text-shadow:
          0 0 20px #efe300,
          0 0 30px #fff,
          0 0 40px #d5dc14,
          0 0 70px #fcb708,
          0 0 80px #d5dc14,
          0 0 100px #d5dc14,
          0 0 150px #7f8138;
      }

      .glowing-text:hover {
        color: #000;
        text-shadow:
          0 0 30px #fff,
          0 0 40px #fff,
          0 0 60px #d5dc14,
          0 0 90px #444511,
          0 0 100px #d5dc14,
          0 0 150px #202104,
          0 0 200px #7f8138;
      }
    </style>
  </body>
</html>
